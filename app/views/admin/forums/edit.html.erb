<h1><%= _("Editing forum") %></h1>

<%= error_messages_for :forum %>

<% form_for(@forum) do |f| %>
  <p>
    <b><%= _("Name") %></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%= _("Description") %></b><br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit _("Update") %>
  </p>
<% end %>

<%= link_to 'Back', admin_forums_path %>
