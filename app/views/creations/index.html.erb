<h1><%= _("Listing creations of this project") %></h1>

<table>
  <tr>
    <th>Project : <%= @project.title %></th>
  </tr>

<% for creation in @project.creations %>
  <tr>
    <td><%= image_tag creation.asset.item.url(:tiny) %></td>
    <td><%= link_to 'Show', person_project_creation_path(current_person, @project, creation) %></td>
    <td><%= link_to 'Destroy', person_project_creation_path(current_person, @project, creation), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a creation', new_person_project_creation_path %> | <%= link_to 'Back to this project\'s page', person_project_path(current_person, @project) %> | <%= link_to 'Back to this user\'s projects', person_projects_path %>