<div id="inbox">
  <h4>MESSAGES</h4>
  <div id="messages">
<%- column_div :type => :primary do -%>
  <% if current_person?(@message.sender) %>
    <% other_person = @message.sender %>
    <% heading = "Message sent to #{h other_person.name}" %>
  <% else %>
    <% heading = "Message from #{h @message.sender.name}" %>
  <% end %>
  
  <%= render :partial => 'message_nav' %>

<%- if @talks.empty? -%>
    <h3 class="blankslate">No messages (yet!)</h3>
  <%- else -%>
    <%= render :partial => "talk", :collection => @talks %>
  <%- end -%>
</div>
</div>

<%- end -%>
