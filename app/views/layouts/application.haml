!!!
%html{ :xmlns =>"http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang =>"en"}
  %head
    %meta{ 'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8" }
    %title Coaliz community and creative contests
    = stylesheet_link_tag "default"
    = javascript_include_tag :defaults
  %body
    #global
      #header
        %span
          =image_tag ("logo.jpg", :id => "logo")
        %span#searchbox
          -form_for (:search, :url => { :action => :index }) do |form|
          %label{ :for =>"s" } Search
          =text_field ("p", :keyword)
          =image_submit_tag ("go.jpg", :id => "go")
          =link_to "Advanced search", {:controller =>"search", :action => "index"}, {:id =>"adv_search"}
          -end
        %span#languages
          