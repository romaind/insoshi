<%= error_messages_for :project %>

<div id="project">
<h4>New project</h4>
<div id="project_global" >
<p>
  Select one of your existing projects:<br />
  <%= collection_select(nil, :projects, current_person.projects , :id, :title) %>
</p>

<div id="project_settings" >
<% form_for(@project, :url => person_projects_path) do |f| %>


  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Views</b><br />
    <%= f.text_field :views %>
  </p>

  <p>
    <b>Licence</b><br />
    <%= f.text_area :licence %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', person_projects_path %>
</div>
</div>
</div>
