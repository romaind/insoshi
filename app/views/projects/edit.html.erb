<%= error_messages_for :project %>
<div id="project">
	<h4>Editing project</h4>
	<div id="project_global" >
		<span id="choose_project">
			<%- form_for current_person do |f| %>
  			  Select one of your existing projects:<br />
  			  <%= f.collection_select :projects, current_person.projects, :id, :title %>
			  <%= f.submit "Edit" %>
			  <input type="hidden", name ="type", value ="project_edit" >
			<%- end %>
		</span>
		<%= link_to image_tag("projects/create_project.gif", :id => "create") %>
		<%= link_to image_tag("projects/delete_project.gif") %>
		
		<div id="project_edition" >
		<% form_for(@project, :url => person_project_path(current_person, @project)) do |f| %>
  		<p id="project_desc" >
    		Description of your project:<br />
    		<%= f.text_area :description %>
  		</p>

  		<p id="title" >
    		Title of your project: *<br />
    		<%= f.text_field :title %>
  		</p>

		<table>
  			<%- i=0 %>
    		<p id="categories" >Categories: *</p>
 			<% for skill in Skill.find(:all) %>
     			<%- if i%2==0 %>
        			<tr>
     			<%- end %>
        			<td>
           				<label> <%= skill.name %>
           				<%= check_box_tag "project[skill_ids][]", skill.id, @project.skills.include?(skill) %></label>
        			</td>
     				<%- i+=1 %>
 			<%- end %>
		</table>
		
  		<p id="tags" >
    		Tags of your project:<br />
            (separate each tag with ",")<br />
    		<%= text_field :p, :tags %>
  		</p>

		<p id="status" >
    		Status of your project: *<br />
    		Published <%= check_box :p, :published %><br />
    		Draft <%= check_box :p, :draft %>
  		</p>

		<% end %>
		<table class="buttons" >
				<tr>
				  <td><%= link_to button_to('Show'), person_project_path(current_person, @project) %></td>
				  <td><%= link_to button_to("Cancel"), :back %></td>
				</tr>
		</table>
		</div>
		<h3>New creation</h3>

		<%= error_messages_for :creation %>

		<div id="project_header">
			Header of your project:
			<%- if @project.creations.first.asset.item.nil? %>
				<div id="preview_empty">&nbsp;</div>
			<%- else %>
				<%= image_tag @project.creations.first.asset.item.url(:preview), { :id => "preview"} %>
			<%- end %>
		</div>

		<% form_for(Creation.new, :url => person_project_creation_path(current_person, @project, Creation.new), :html => { :multipart => true }) do |f| %>
  		<p id="new_creation">
			<span id="label">Select a file to upload on your project:</span>
    		<%= error_messages_for :assets %>
    		<% fields_for :asset do |a| %>
      			<%= a.file_field :item %>
    		<% end %>
		</p>

		<p id="terms_content">
			<span>I certify I own all the rights on the content I'm uploading and this content respects the
			<%= link_to "Terms of Use", "terms_of_use",{:id => "terms"} %> of Coaliz</span>
			<%= f.radio_button :p, :terms%>
		</p>
<br>
  		<p class="buttons">
    		<%= f.submit "Create" %>
  		</p>

		<% end %>
		
		
		<b>My Creations:</b>
		<table>
			<%- i=0 %>
			<%- unless @project.creations.nil? %>
				<% @project.creations.each do |crea| %>
					<%- if i%6==0 %>
						<tr>
					<%- end %>
					<td>
  						<%= link_to(image_tag(crea.asset.item.url(:tiny)), person_project_creation_path(current_person, @project, crea)) %>
					</td>
					<%- i+=1 %>
					<%- if i%6==0 %>
						</tr>
					<%- end %>
				<%- end %>
			<%- end %>
			<%- while i<12 %>
				<%- if i%6==0 %>
					<tr>
				<%- end %>
				<td><%=image_tag "defaults/minipreview.gif"%></td>
				<%- i+=1 %>
				<%- if i%6==0 %>
					</tr>
				<%- end %>
			<%- end %>
		</table>
		</div>
</div>