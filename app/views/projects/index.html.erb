<h1>Listing projects</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Views</th>
    <th>User</th>
    <th>Licence</th>
  </tr>

<% for project in @projects %>
  <tr>
    <td><%=h project.title %></td>
    <td><%=h project.description %></td>
    <td><%=h project.views %></td>
    <td><%=h project.person_id %></td>
    <td><%=h project.licence %></td>
    <td><%= link_to 'Show', person_project_path(current_person, project) %></td>
    <td><%= link_to 'Edit', edit_person_project_path(current_person, project) %></td>
    <td><%= link_to 'Destroy', person_project_path(current_person, project), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

