<script type="text/javascript">
  var so = new SWFObject('/swf/player.swf','mpl','584','380','9','#000000');
  so.addParam('allowscriptaccess','always');
  so.addParam('allowfullscreen','true');
  so.addParam('wmode','opaque');
  so.addParam('flashvars','&file=<%= formatted_person_project_url(@author, @project, :xml) %>&screencolor=000000&logo=<%= image_path("logo-player.png") %>&playlistsize=85&playlist=right&autostart=true&fullscreen=true&backcolor=000000&frontcolor=ffffff');
  so.write('player');
</script>