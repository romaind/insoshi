  // In my case I want to load them onload, this is how you do it!
  Event.observe(window, 'load', loadAccordions, false);
  
  // Set up all accordions
  function loadAccordions() {
    var bottomAccordion = new accordion('project_content', {      
        defaultSize : {          
            width : 178,
            height : 270
        }
    });
    
    // Open first one
    bottomAccordion.activate($$('#project_content .accordion_toggle')[0]);
    
