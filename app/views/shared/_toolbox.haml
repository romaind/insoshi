-if logged_in?
  %span#toolbox
    #login
      #login_content
        %h3
          Welcome,
          =h current_person.first_name
          =h current_person.name
        =link_to pluralize(current_person.new_messages, "New message"), profile_path(current_person, "messages")
        %br
        =link_to pluralize(current_person.requested_contacts.length, "New request"), profile_path(current_person, "network")
        %br
        #logout
          =link_to "Log out", logout_path
          -if current_person.admin?
            -if admin_view?
              =link_to "Standard view", home_path
            -else
              =link_to "Admin view", admin_preferences_path

    =link_to(image_tag("toolbox/newproject.gif"),choose_person_projects_path(current_person))
    %br
    =link_to(image_tag("toolbox/my_portfolio.gif"),profile_path(current_person, "profile"))

    #feedback
      #title
        LEAVE A FEEDBACK
      #subtitle
        REPORT A BUG
      #formbody
        -form_for(:feedback, :url => feedback_path ) do |form|
          =form.text_area :message, :id => "feedback_message"
          #thanks	
          =image_submit_tag("toolbox/send.jpg", :id =>"send")
-else
  %span#toolbox
    #signin
      -column_div :type => :primary do
        #member_title Already member ?
        -form_tag session_path do
          .form_row
            %label{ :for => "email" } Email address
            =text_field_tag('email', params[:email], :maxlength => Person::MAX_EMAIL)

          =set_focus_to_id "email"
          .form_row
            %label{ :for => "password" }Password
            =password_field_tag 'password', params[:password], :maxlength => Person::MAX_PASSWORD

          -if global_prefs && global_prefs.can_send_mail?
            %p{ :id => "forgot" }
              =link_to "I forgot my password!", new_password_reminder_path

          .form_row
            = image_submit_tag 'toolbox/signin_butt.gif', :id => "go_button"
  
          .form_row
            %label{ :for => "remember_me", :class =>"checkbox" }Remember me:
            =check_box_tag 'remember_me', '1', true, :class => "checkbox"

    =link_to image_tag("toolbox/signup.gif"), signup_path

    #feedback
      #title
        LEAVE A FEEDBACK
      #subtitle
        REPORT A BUG
      #formbody
        -form_tag feedback_path do
          =text_area ('feedback', params[:message])
          =image_submit_tag("toolbox/send.jpg", :id =>"send")
