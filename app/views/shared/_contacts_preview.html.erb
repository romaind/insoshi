<h4>CONTACTS</h4>
<div id="contacts_small">
<%- hidden_admin = 0 %>
<%- @person.contacts.each do |contact| %>
  <%- if not(contact.admin?) %>
    <%- hidden_admin +=1 %>
  <%- end %>
<%- end %>
<%- if @some_contacts.empty? or hidden_admin == 0 -%>
	<p id="nocontact">No contact</p>
<%- else %>
	<table>
		<%- i=0 %>
    	<%- @person.contacts.each do |contact| -%>
            <%- if current_person?(@person) %>
    			<%- if i%4 == 0 %>
      				<tr>
    			<% end %>
			<%- else %>
				<%- if i%3 == 0 %>
      				<tr>
    			<% end %>
			<%- end %>
			<%- if not(contact.admin?) %>
      			<td class="thumb">
   					<%= image_link(contact, :image => :thumbnail,
                       						:image_options => { :class => "photo fn" },
                       						:link_options =>  { :class => "url" }) %>
					<table>
						<tr>
							<td class="name">
    							<p>
      								<b><%= person_link contact, :class => "url fn" %></b>
    							</p>
							</td>
						</tr>
						<%- if current_person?(@person) and not(current_person.admin?) %>
						<tr>
							<td class="delete">
								<%= link_to image_tag ("icons/delete.gif"), connection_path(Connection.conn(current_person, contact)), :method => :delete, :confirm => "Are you sure you want to end connection with #{h person.name}?" %>
								<%= link_to "Delete", connection_path(Connection.conn(current_person, contact)), :method => :delete, :confirm => "Are you sure you want to end connection with #{h person.name}?" %>
							</td>
						</tr>
						<%- end %>
					</table>
      			</td>
			<%- i+=1 %>
			<%- end %>
    	<%- end -%>
    </table>
<%- end -%>
</div>