<%- unless minifeed_item.item.nil? -%>
<div class="minifeed" >
  <table>
	<tr>
	  <td>
  		<p class="meta published">
    		<%= minifeed_item.created_at.strftime("On <b>%d/%m/%Y</b>") %>
    		<%= minifeed_item.created_at.strftime("at <b>%I:%M%p</b>") %>
  		</p>
  		<p><%= minifeed_message minifeed_item %></p>
	  <td class="thumb">
  		<%= image_link minifeed_item.person %>
  </table>
</div>
<%- end -%>
