<h1><%= _("Listing assets") %></h1>

<table>
  <tr>
    <th><%= _("Creation") %></th>
    <th><%= _("Item content type") %></th>
    <th><%= _("Item file name") %></th>
    <th><%= _("Item file size") %></th>
    <th><%= _("Item") %></th>
    <th><%= _("Item type") %></th>
  </tr>

<% for asset in @assets %>
  <tr>
    <td><%=h asset.creation_id %></td>
    <td><%=h asset.item_content_type %></td>
    <td><%=h asset.item_file_name %></td>
    <td><%=h asset.item_file_size %></td>
    <td><%=h asset.item_id %></td>
    <td><%=h asset.item_type %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

