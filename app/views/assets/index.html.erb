<h1>Listing assets</h1>

<table>
  <tr>
    <th>Creation</th>
    <th>Item content type</th>
    <th>Item file name</th>
    <th>Item file size</th>
    <th>Item</th>
    <th>Item type</th>
  </tr>

<% for asset in @assets %>
  <tr>
    <td><%=h asset.creation_id %></td>
    <td><%=h asset.item_content_type %></td>
    <td><%=h asset.item_file_name %></td>
    <td><%=h asset.item_file_size %></td>
    <td><%=h asset.item_id %></td>
    <td><%=h asset.item_type %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

