<h1><%= _("Editing asset") %></h1>

<%= error_messages_for :asset %>

<% form_for(@asset) do |f| %>
  <p>
    <b><%= _("Creation") %></b><br />
    <%= f.text_field :creation_id %>
  </p>

  <p>
    <b><%= _("Item content type") %></b><br />
    <%= f.text_field :item_content_type %>
  </p>

  <p>
    <b><%= _("Item file name") %></b><br />
    <%= f.text_field :item_file_name %>
  </p>

  <p>
    <b><%= _("Item file size") %></b><br />
    <%= f.text_field :item_file_size %>
  </p>

  <p>
    <b><%= _("Item") %></b><br />
    <%= f.text_field :item_id %>
  </p>

  <p>
    <b><%= _("Item type") %></b><br />
    <%= f.text_field :item_type %>
  </p>

  <p>
    <%= f.submit _("Update") %>
  </p>
<% end %>

<%= link_to 'Show', @asset %> |
<%= link_to 'Back', assets_path %>
