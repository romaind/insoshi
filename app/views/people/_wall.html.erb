<%- if logged_in? -%>
    <h4 id="wall_title">COMMENTS WALL</h4>
  <div class="wall">
    <a name="wall"></a>
    <div id="wall_form" >
    <%- if connected_to?(@person) -%>
      <div id="wall_comment">
		Leave a comment on my wall<br>
		<%- if current_person?(@person) %>
		 <%= image_tag "comment.gif" %>
		<%- else %>
		 <%= image_tag "comment_public.gif" %>
		<%- end %>
	  </div>
      <% form_for :comment, :url => person_comments_path(@person) do |f| %>
        <div id="wall_textarea">
          <%= f.text_area :body, :rows => 5 %>
        </div>
  
        <div id="wall_button">
          <%= submit_tag "Submit", :class => "button" %>
        </div>
      <% end %>
    <%- else -%>
      <p>
      You must be connected to <%= h @person.name %> to leave a wall comment.
      </p>
      <p>
      <%= link_to "Connect with #{h @person.name} now",
                  person_connections_path(@person), :method => :post %>
      </p>
    <%- end -%>
    </div>
    <%- unless @person.comments.empty? -%>
      <div class="list comments full">
        <%= render :partial => 'comment', :collection => @person.comments %>
      </div>
    <%- end -%>
  </div>
<%- end -%>