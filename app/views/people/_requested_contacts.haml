%h4 CONTACT REQUESTS
#person_request
  - unless @person.requested_contacts.empty?
    %table
      -@person.requested_contacts.in_groups_of(4) do |row|
        %tr
          -row.each do |contact|
            -if contact
              - conn = Connection.conn(current_person, contact)
              %td.contact_request
                = image_link contact
                %br
                = person_link contact
                %br
                wants to be added
                %br
                to your friends  
                %br
                = time_ago_in_words(conn.created_at) 
                ago
                / %p
                -form_for(conn) do |f|
                  %p
                    = f.submit "Accept", :class => "button"
                    = f.submit "Decline", :id => nil, :class => "button"
  -else
    %p
      No contact request.