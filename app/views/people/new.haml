#description
  =image_tag ("desc_top.gif")
  #desc_message
    -column_div :type => :primary do
      -if global_prefs.app_name.blank?
        %h2 Sign up
      -else
        %h2 Sign up for
        =global_prefs.app_name

      =error_messages_for :person

      -form_for @person do |f|
        .form_row
          %label{ :for => "email"}
            Email address :
          %br
          =f.text_field :email, :maxlength => Person::MAX_EMAIL, :class => "sign"
          =set_focus_to_id "person_email"

        .form_row
          %label{ :for => "password"}
            Password :
          %br
          =f.password_field :password, :maxlength => Person::MAX_PASSWORD, :class => "sign"
 
        .form_row
          %label{ :for => "password_confirmation" }
            Confirm Password :
          %br
          =f.password_field :password_confirmation, :maxlength => Person::MAX_PASSWORD, :value => "", :class => "sign"
   
        .form_row
          =image_submit_tag 'go_button_white.jpg', :class => "button"
  
  =image_tag ("desc_bottom.gif")