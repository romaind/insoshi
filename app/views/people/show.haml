- column_div :type => :primary do
  -if current_person?(@person)
    = stylesheet_link_tag "current_profile"
  #profile
    =image_tag "profile_top.gif"
    #profile_details
      = image_tag @person.profile, :id => "profile_image", :alt => h(@person.name)
      #details
        %b
          =h @person.first_name
          %p
            =h @person.name
        =image_tag @person.gender_image
        \,
        =pluralize(@person.age, "year")
        %br
        =h @person.city

      #stats
        %p
          =pluralize(10, "project")
          %br
          =pluralize(@person.contacts.count, "contact")
          %br
          =pluralize(420, "total view")
          %br
          =pluralize(102, "total vote")
          %br
          =pluralize(6, "contest's participation")
          %br
          =pluralize(2, "contest's win")
          %br
          3 contest's "top 5"

      =render :partial => 'actions'

    = image_tag "profile_bottom.gif"

  =render :partial => 'my_projects'
  #right
    .profile_right_column
      %h4 DESCRIPTION
      -if @person.description?
        #description_content
          %p
            = display(truncate(@person.description, 400))
        -if current_person?(@person)
          .profile_edit
            =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#person_description"
      -else
        .column_content
          -if current_person?(@person)
            .add
              =link_to image_tag("add.gif"), edit_person_path(@person) + "#person_description"
              %br
              =link_to "Add a description", edit_person_path(@person) + "#person_description"
          -else
            %p
              No description.
    
    .profile_right_column
      %h4 STATUS
      .column_content
        %p
          -if false#@person.status?
            -if curent_person?(@person)
              =select :p, :status, ["Working", "Studying", "Looking for a job", "Looking for a partner"]
              /Status selected by clicking on status option
            -else
              = display(@person.status)
          -else
            -if current_person?(@person)
              .add
                =link_to image_tag("add.gif"), edit_person_path(@person) + "#p_status" #"#person_status"
                %br
                =link_to "Set status", edit_person_path(@person) + "#p_status" #"#person_status"
            -else
              No status.

    .profile_right_column
      %h4 WEBSITE
      .column_content
        %p
          -if @person.website?
            = link_to @person.website, "http://" + @person.website
            -if current_person?(@person)
              .profile_edit
                =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#person_website"
          -else
            =display_empty_field("website")
  
    .profile_right_column
      %h4 EDUCATION
      .column_content
        %p
          -if false#@person.schools?
            ESAD de Reims
            %br
            Beaux-Arts
            /-for each @person.schools do |school|
            /  =display(school)
            /  %br
            -if current_person?(@person)
              .profile_edit
              =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#p_schools"#"#person_schools"
          -else
            =display_empty_field("schools")

    .profile_right_column
      %h4 LANGUAGES
      .column_content
        %p
          -if false#@person.languages?
            French
            %br
            English
            /-for each @person.languages do |language|
            /  =display(language)
            /  %br
            -if current_person?(@person)
              .profile_edit
              =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#p_languages"#"#person_languages"
          -else
            =display_empty_field("languages")

    .profile_right_column
      %h4 SOFTWARE
      .column_content
        %p
          -if false#@person.software
            Photoshop CS3
            %br
            Illustrator CS2
            /-for each @person.software do |software|
            /  =display(software)
            /  %br
            -if current_person?(@person)
              .profile_edit
              =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#p_software"#"#person_software"
          -else
            =display_empty_field("software")
  
    .profile_right_column
      %h4 CV
      .column_content
        %p
          -if false#@person.cv?
            #cv
              =link_to image_tag("logoPDF.jpg") #, person_cv_path
              %br
              =link_to "My CV"
            =link_to image_tag("get_adobe.jpg"), "http://www.adobe.fr/products/acrobat/readstep2.html"
            -if current_person?(@person)
              .profile_edit
              =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#p_cv"#"#person_cv"
          -else
            =display_empty_field("cv")


    .profile_right_column
      %h4 TAGS
      .column_content
        %p
          -if false#@person.tags
            coaliz, groupe, ecole, test, blabla, divers, dessin
            /-for each @person.tags do |tag|
            /  =display(tag)
            /  ,
            -if current_person?(@person)
              .profile_edit
                =link_to image_tag("mini_edit.gif") + "Edit", edit_person_path(@person) + "#p_tags"#"#person_tags"
          -else
            =display_empty_field("tags")

-if current_person?(@person)
  #feed_requests
    #personal_requests
      = render :partial => "requested_contacts"
    #minifeeds
      = render :partial => 'shared/minifeed'
-if logged_in?
  #contacts
    #common_contacts
      = render :partial => 'common_contacts'
    #contact_preview
      = render :partial => 'shared/contacts_preview', :locals => { :person => @person }

= render :partial => 'wall'