<%- if logged_in? -%>
  <%- unless @common_connections.empty? -%>
    <h4>COMMON CONTACTS</h4>
    <div id="common_list">
		<table>
		<%- i=0 %>
      <%- @common_connections.each do |connection| -%>
       <%- unless connection.contact.admin? %>
       <%- if i%2==0 %>
		<tr>
	   <%- end %>
        	<td class="thumb">
          		<%= image_link(connection.contact,	:image => :minithumb,
                         							:image_options => { :class => "photo fn" },
                         							:link_options =>  { :class => "url" }) %>
        	</td>
		<%- i+=1 %>
		<%- end %>
      <%- end -%>
    </table>
  </div>
  <%- end -%>
<%- end %>