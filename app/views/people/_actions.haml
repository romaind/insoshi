#actions
  %table#actions_list
    -if admin? and not @person.active?
      %tr
        %td
          This person is not active
    -if current_person?(@person)
      %tr
        %td
          =link_to image_tag("portfolio/edit_profile.gif"), edit_person_path(@person)
        %td
          =link_to "Edit my profile", edit_person_path(@person)
      / %tr
      /   %td
      /     =link_to image_tag("portfolio/new_message.gif"), new_person_message_path(@person)
      /   %td
      /     =link_to "Send a message", new_person_message_path(@person)
  -else
    -if logged_in?
      -if current_person.waiting_acceptation?(@person)
        %tr
          %td
            =image_tag "portfolio/waiting.gif"
          %td
            Waiting acceptation
      -unless Connection.exists?(@person, current_person)
        -if not(current_person?(@person))
          %tr
            %td
              = link_to image_tag("portfolio/new_contact.gif"), person_connections_path(@person), :method => :post
            %td
              = link_to "Add to contact", person_connections_path(@person), :method => :post
      -if Connection.exists?(@person, current_person)
        -if not(@person.admin)
          %tr
            %td
              = link_to image_tag("portfolio/del_contact.gif"), connection_path(Connection.conn(current_person, @person)), :method => :delete, :confirm => "Are you sure you want to end connection with #{h @person.name}?"
            %td
              = link_to "Delete from contacts", connection_path(Connection.conn(current_person, @person)), :method => :delete, :confirm => "Are you sure you want to end connection with #{h @person.name}?"
        %tr
          %td
            = link_to image_tag("portfolio/new_message.gif"), new_person_message_path(@person)
          %td
            = link_to "Send a message", new_person_message_path(@person)
      - if current_person.admin?
        %tr
          %td{ :colspan => 2}
          - activity = @person.deactivated? ? "activate" : "deactivate"
          = link_to activity, admin_person_path(@person, :task => "deactivated"), :method => :put