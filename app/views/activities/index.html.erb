<h1><%= _("Listing activities") %></h1>

<table>
  <tr>
    <th><%= _("Person") %></th>
    <th><%= _("Instance") %></th>
    <th><%= _("Type") %></th>
  </tr>

<% for activity in @activities %>
  <tr>
    <td><%=h activity.person_id %></td>
    <td><%=h activity.item_id %></td>
    <td><%=h activity.item_type %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

